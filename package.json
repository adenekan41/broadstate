{
  "name": "broad-state",
  "license": "MIT",
  "version": "1.1.5",
  "repository": "git://github.com/adenekan41/broadstate.git",
  "description": "A global state manager with useState and react hooks",
  "author": "Adenekan Wonderful <hellocodewonders@gmail.com> (https://codewonders.dev)",
  "main": "bundle-umd/index.js",
  "module": "bundle-es/index.js",
  "jsnext:main": "bundle-es/index.js",
  "scripts": {
    "flush": "rm -rf bundle-cjs && rm -rf bundle-es && rm -rf bundle-umd",
    "build": "yarn flush && rollup -c && bundlesize",
    "test": "jest",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "homepage": "https://github.com/adenekan41/broadstate#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.9.6",
    "@testing-library/react": "^10.4.7",
    "bundlesize": "^0.18.0",
    "core-js": "^3.3.4",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.10.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-multi-input": "^1.0.3",
    "babel-jest": "^26.1.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-terser": "^5.2.0"
  },
  "bundlesize": [{
      "path": "bundle-cjs/**/*.js"
    },
    {
      "path": "bundle-es/**/*.js"
    },
    {
      "path": "bundle-umd/**/*.js"
    }
  ],
  "files": [
    "bundle-es",
    "bundle-cjs",
    "bundle-umd"
  ],
  "keywords": [
    "javascript",
    "codewonders",
    "js",
    "utility",
    "functions",
    "utilities",
    "broad-state",
    "helper functions"
  ],
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "jest": {
    "setupFilesAfterEnv": [],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  }
}
